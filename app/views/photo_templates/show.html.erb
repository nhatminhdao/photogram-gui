<h1>Photo Details</h1>

<dl>
  <dt>Image</dt>
  <dd>
    <img src="<%= @the_photo.image %>">
  </dd>

  <dt>Caption</dt>
  <dd><%= @the_photo.caption %></dd>

  <dt>Owner</dt>
  <dd><%= @the_photo.poster.username %></dd>

  <dt>Posted</dt>
  <dd><%= @the_photo.created_at %></dd>

  <dt>Edit photo</dt>
  <dd>
    <form action="/modify_photo/<%= @the_photo.id %>" method="post">
      <label for="a">Image</label>
      <input id="a" type="text" name="input_image" value="<%= @the_photo.image %>" placeholder="Enter a URL for the image...">

      <label for="b">Caption</label>
      <input id="b" type="text" name="input_caption" value="<%= @the_photo.caption %>" placeholder="Enter a caption for the photo...">

      <button>Update photo</button>
    </form>

    <dt>Delete photo</dt>
    <dd>
      <a href="/delete_photo/<%= @the_photo.id %>">Delete this photo</a></dd>
  </dd>

</dl>

<h2>Comments</h2>

<table>
  <tr>
    <th>Commenter</th>
    <th>Comment</th>
    <th>Posted</th>
  </tr>

  <% @the_photo.comments.each do |a_comment| %>
    <tr>
      <td><%= a_comment.commenter.username %></td>
      <td><%= a_comment.body %></td>
      <td><%= a_comment.created_at %></td>
    </tr>
  <% end %>
</table>

<h3>Add a new comment</h3>

<form action="/add_comment" method="post">
  <label for="a">Photo ID</label>
  <input id="a" type=text placeholder="Enter the photo ID" name="input_photo_id" value="<%= @the_photo.id %>">

  <label for="b">Author ID</label>
  <input id="b" type=text placeholder="Enter your author ID" name="input_author_id">

  <label for="c">Comment</label>
  <input id="c" type=text placeholder="Enter a comment" name="input_comment">

  <button>Add comment</button>
</form>
